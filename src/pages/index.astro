---
// No server-side JS needed for this simple page
---

<html lang="pt-BR">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>semaninha</title>
    <style>
      html,
      body {
        height: 100%;
        margin: 0;
      }
      body {
        display: flex;
        justify-content: center;
        align-items: center;
      }
      img {
        max-width: 100%;
        height: auto;
      }
      .wrapper {
        position: relative;
        display: inline-block;
      }
      .wrapper::after {
        content: "";
        position: absolute;
        left: 0;
        top: 100%;
        width: 100%;
        height: 20px;
        pointer-events: auto;
      }
      .wrapper:hover::after {
        pointer-events: none;
      }
      .credit {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        top: 100%;
        padding-top: 12px;
        color: #9ca3af;
        font-size: 12px;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.15s ease-in-out;
      }
      .wrapper:hover .credit {
        opacity: 1;
        pointer-events: auto;
      }
    </style>
  </head>
  <body>
    <div class="wrapper">
      <img id="semaninha-img" alt="Imagem do dia da semana" />
      <p class="credit">infelizmente, por <a href="https://falso.net">Igor</a></p>
    </div>

    <script>
      (function () {
        const options: Intl.DateTimeFormatOptions = { weekday: "long", timeZone: "America/Sao_Paulo" };
        const dayPt = new Intl.DateTimeFormat("pt-BR", options)
          .format(new Date())
          .toLowerCase();

        // Mapeia o nome completo do dia em português para o nome de arquivo desejado
        const map: Record<string, string> = {
          "segunda-feira": "segunda",
          "terça-feira": "terca",
          "quarta-feira": "quarta",
          "quinta-feira": "quinta",
          "sexta-feira": "sexta",
          "sábado": "sabado",
          "domingo": "domingo",
        };

        const key = map[dayPt];
        const img = document.getElementById("semaninha-img") as HTMLImageElement;
        if (key && img) {
          img.src = `/${key}.png`;
        }
      })();
    </script>
  </body>
</html>
